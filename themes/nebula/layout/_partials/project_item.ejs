<span class="project">

    <h2 class="article--title">
        <a class="article--link" href="<%- url_for(project.path) %>">
            <%= project.title %>
        </a>
    </h2>

    <% if (project.excerpt) { %>
        <p class="article--excerpt"> 
            <%- project.excerpt %>
        </p>
        <a href="<%- url_for(project.path) %>">More details...</a>
    <% } %>

</span>