<% if (page.tags && page.tags.length) { %> 
    <h3><i class="icofont-tag"></i> Tags</h3>
    <div class="post-meta--tags">
        <%- list_tags(page.tags, {
            show_count: false,
            class: "post-meta--tag",
            style: "none",
            seperator: ","
        }) %>
    </div>
<% } %>